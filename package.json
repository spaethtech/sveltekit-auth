{
  "name": "@sveltekit-auth/core",
  "version": "0.1.0",
  "description": "Authentication library for SvelteKit 5 with runes mode support",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "svelte": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "default": "./dist/providers/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "default": "./dist/middleware/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "default": "./dist/adapters/index.js"
    },
    "./adapters/schema/drizzle-pg": {
      "types": "./dist/adapters/schema/drizzle-pg.d.ts",
      "default": "./dist/adapters/schema/drizzle-pg.js"
    },
    "./adapters/schema/drizzle-mysql": {
      "types": "./dist/adapters/schema/drizzle-mysql.d.ts",
      "default": "./dist/adapters/schema/drizzle-mysql.js"
    },
    "./adapters/schema/drizzle-sqlite": {
      "types": "./dist/adapters/schema/drizzle-sqlite.d.ts",
      "default": "./dist/adapters/schema/drizzle-sqlite.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^20.0.0",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "svelte",
    "sveltekit",
    "auth",
    "authentication",
    "middleware",
    "runes",
    "adapter",
    "prisma",
    "drizzle",
    "database"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spaethtech/sveltekit-auth"
  }
}
